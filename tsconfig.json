{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2021.WeakRef"],
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"jsxFactory": "",
		"jsxFragmentFactory": "",
		"stripInternal": true,
		"noUnusedLocals": true,
		"paths": {
			"deepsignal": ["./packages/deepsignal/src/index.ts"],
			"deepsignal/preact": ["./packages/deepsignal/preact/src/index.ts"]
		}
	}
}
